<!-- Directiva usada para definir plantillas en go,
todo lo que se encuentre dentro dell 'define' y el 'end'
forman parte del template y en este caso la plantilla se llama BASE-->

{{define "base"}}
    <!doctype html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <!--Define a section content in this template that
        the dot at the file means that this sections includes whatever DATA
         that will pass in the handler functions-->
        {{block "css" .}}

        {{end}}
    </head>
    <body>

    {{block "content" .}}

    {{end}}

    {{block "js" .}}

    {{end}}

    </body>
    </html>
{{end}}